<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.Search.UsuarioSearch"
             xmlns:models="clr-namespace:IntuitERP.models"
             Shell.NavBarIsVisible="False"
             Title="Pesquisa de Usuários"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundColorLight}, Dark={StaticResource PageBackgroundColorDark}}">

    <ContentPage.Resources>
        <!-- These styles should ideally be in a global ResourceDictionary -->
        <ResourceDictionary>
            <!-- Action Button Colors -->
            <Color x:Key="SuccessColor">#28A745</Color>
            <Color x:Key="WarningColor">#FFC107</Color>
            <Color x:Key="DangerColor">#DC3545</Color>
            <Color x:Key="WarningTextColor">#212529</Color>

            <!-- Base Style for Action Buttons -->
            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="Padding" Value="15,0" />
            </Style>

            <!-- Specific Styles for CRUD Buttons -->
            <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
                <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}" />
            </Style>
            <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
                <Setter Property="BackgroundColor" Value="{StaticResource WarningColor}" />
                <Setter Property="TextColor" Value="{StaticResource WarningTextColor}" />
            </Style>
            <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- Top header -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource PrimaryDarkBlue}" Padding="20,15">
            <Label Text="Usuários Cadastrados" TextColor="{StaticResource White}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Actions: Search Bar and Action Buttons -->
        <Border Grid.Row="1" 
                StrokeThickness="0" 
                BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundColorLight}, Dark={StaticResource CardBackgroundColorDark}}"
                Padding="15">
            <VerticalStackLayout Spacing="15">
                <SearchBar x:Name="UsuarioSearchBar" Placeholder="Buscar por nome de usuário..." TextChanged="UsuarioSearchBar_TextChanged"/>
                <Grid ColumnSpacing="10" ColumnDefinitions="*,*,*">
                    <Button Grid.Column="0" x:Name="NovoUsuarioButton" Text="Novo" Clicked="NovoUsuarioButton_Clicked" Style="{StaticResource SuccessButton}"/>
                    <Button Grid.Column="1" x:Name="EditarUsuarioButton" Text="Editar" Clicked="EditarUsuarioSelecionadoButton_Clicked" IsEnabled="False" Style="{StaticResource WarningButton}"/>
                    <Button Grid.Column="2" x:Name="ExcluirUsuarioButton" Text="Excluir" Clicked="ExcluirUsuarioSelecionadoButton_Clicked" IsEnabled="False" Style="{StaticResource DangerButton}"/>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Usuarios List -->
        <CollectionView x:Name="UsuariosCollectionView"
                        Grid.Row="2"
                        SelectionMode="Single"
                        SelectionChanged="UsuariosCollectionView_SelectionChanged"
                        EmptyView="Nenhum usuário encontrado."
                        Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:UsuarioModel">
                    <Border Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                            StrokeShape="RoundRectangle 8"
                            Padding="15" 
                            Margin="5">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLightBlue}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Label FontAttributes="Bold" 
                               FontSize="16" 
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColorLight}, Dark={StaticResource PrimaryTextColorDark}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding CodUsuarios, StringFormat='Cód: {0} - '}"/>
                                    <Span Text="{Binding Usuario}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
