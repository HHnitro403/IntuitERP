<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.Search.CompraSearch"
             Title="CompraSerch">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
            <RowDefinition Height="*"/>    <!-- List -->
        </Grid.RowDefinitions>

        <!-- Top header -->
        <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#FFE4C4, Dark=#1A1C20}" Padding="10,15">
            <Label Text="Compras Registradas" TextColor="White" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Actions: Search Bar and Action Buttons -->
        <VerticalStackLayout Grid.Row="1" Padding="10" Spacing="10">
            <SearchBar x:Name="CompraSearchBar" Placeholder="Buscar por cód. compra, fornecedor ou vendedor..." TextChanged="CompraSearchBar_TextChanged"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="NovaCompraButton" Text="Nova" Clicked="NovaCompraButton_Clicked" BackgroundColor="ForestGreen" TextColor="White"/>
                <Button Grid.Column="1" x:Name="EditarCompraButton" Text="Editar Selecionada" Clicked="EditarCompraSelecionadaButton_Clicked" BackgroundColor="Orange" TextColor="White"/>
                <Button Grid.Column="2" x:Name="ExcluirCompraButton" Text="Excluir Selecionada" Clicked="ExcluirCompraSelecionadaButton_Clicked" BackgroundColor="Red" TextColor="White"/>
            </Grid>
        </VerticalStackLayout>

        <!-- Compras List -->
        <CollectionView x:Name="ComprasCollectionView"
                        Grid.Row="2"
                        SelectionMode="Single"
                        SelectionChanged="ComprasCollectionView_SelectionChanged"
                        EmptyView="Nenhuma compra encontrada.">
            <CollectionView.ItemTemplate>
                <!-- Using a local "DisplayModel" as the DataType -->
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}" CornerRadius="5">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=LightSkyBlue, Dark=DarkSlateBlue}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid RowSpacing="5" ColumnDefinitions="*,*">
                           <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="Medium" FontAttributes="Bold" Text="{Binding CodCompra, StringFormat='Compra Cód: {0}'}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" FontSize="Small" Text="{Binding DataCompra, StringFormat='{0:dd/MM/yyyy}'}"/>
                            <Label Grid.Row="1" Grid.Column="1" FontSize="Small" FontAttributes="Bold" HorizontalTextAlignment="End" Text="{Binding ValorTotal, StringFormat='R$ {0:N2}'}"/>

                            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="Small" Text="{Binding NomeFornecedor, StringFormat='Fornecedor: {0}'}"/>
                            <Label Grid.Row="3" Grid.Column="0" FontSize="Small" Text="{Binding NomeVendedor, StringFormat='Vendedor: {0}'}"/>
                            <Label Grid.Row="3" Grid.Column="1" FontSize="Small" HorizontalTextAlignment="End" Text="{Binding Status, StringFormat='Status: {0}'}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>