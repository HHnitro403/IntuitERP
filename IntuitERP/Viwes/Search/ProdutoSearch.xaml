<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.Search.ProdutoSearch"
             xmlns:models="clr-namespace:IntuitERP.models" 
             xmlns:converters="clr-namespace:IntuitERP.Helpers"
             Title="ProdutoSearch">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Actions (Search, New, Edit, Delete Buttons) -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- Top header -->
        <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#FFE4C4, Dark=#1A1C20}" Padding="10,15">
            <Label Text="Produtos Cadastrados" TextColor="White" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Actions: Search Bar and Action Buttons -->
        <VerticalStackLayout Grid.Row="1" Padding="10" Spacing="10">
            <SearchBar x:Name="ProdutoSearchBar" Placeholder="Buscar produto por descrição, categoria ou tipo..." TextChanged="ProdutoSearchBar_TextChanged"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="NovoProdutoButton" Text="Novo" Clicked="NovoProdutoButton_Clicked" BackgroundColor="ForestGreen" TextColor="White"/>
                <Button Grid.Column="1" x:Name="EditarProdutoButton" Text="Editar Selecionado" Clicked="EditarProdutoSelecionadoButton_Clicked" IsEnabled="False" BackgroundColor="Orange" TextColor="White"/>
                <Button Grid.Column="2" x:Name="ExcluirProdutoButton" Text="Excluir Selecionado" Clicked="ExcluirProdutoSelecionadoButton_Clicked" IsEnabled="False" BackgroundColor="Red" TextColor="White"/>
            </Grid>
        </VerticalStackLayout>

        <!-- Products List -->
        <CollectionView x:Name="ProdutosCollectionView"
                        Grid.Row="2"
                        ItemsSource="{Binding _listaProdutosDisplay}"
            SelectionMode="Single"
                        SelectionChanged="ProdutosCollectionView_SelectionChanged"
                        EmptyView="Nenhum produto encontrado.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ProdutoModel">
                    <Frame Padding="10" Margin="5" BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}" CornerRadius="5">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=LightSkyBlue, Dark=DarkSlateBlue}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" FontSize="Medium" FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding CodProduto, StringFormat='Cód: {0} - '}"/>
                                        <Span Text="{Binding Descricao}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Grid.Row="1" FontSize="Small" Text="{Binding Categoria, StringFormat='Categoria: {0}'}"/>
                            <Label Grid.Row="2" FontSize="Small" Text="{Binding PrecoUnitario, StringFormat='Preço: R$ {0:N2}'}"/>
                            <Label Grid.Row="3" FontSize="Small" Text="{Binding SaldoEst, StringFormat='Estoque: {0}'}"/>
                            <Label Grid.Row="4" FontSize="Small">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Status: "/>
                                        <Span Text="{Binding Ativo, Converter={StaticResource BoolToStatusConverter}}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>