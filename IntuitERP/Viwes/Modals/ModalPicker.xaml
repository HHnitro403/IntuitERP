<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.Modals.ModalPicker">
    <ContentPage.Content>
        <Grid Padding="20" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <SearchBar Placeholder="Search items..."
                           CancelButtonColor="Gray"
                           SearchCommand="{Binding SearchCommand}"
                           TextChanged="OnSearchBarTextChanged"
                           x:Name="SearchInput">
                    <SearchBar.Resources>
                        <Style TargetType="SearchBar">
                            <Setter Property="VisualStateManager.VisualStateGroups">
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                                <Setter Property="TextColor" Value="Black" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </Setter>
                        </Style>
                    </SearchBar.Resources>
                </SearchBar>

                <ListView x:Name="SearchResultsListView"
                          ItemsSource="{Binding FilteredItems}"
                          ItemSelected="OnItemSelected"
                          HasUnevenRows="True"
                          SelectionMode="Single">

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />

                            <VisualState Name="Selected">
                                <VisualState.Setters>
                                    <Setter TargetName="MainFrame"
                                    Property="Frame.BackgroundColor"
                                    Value="#E0E0E0" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <Frame Margin="5" Padding="10"
                                       BackgroundColor="White"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="8"
                                       HasShadow="False">
                                    <Label Text="{Binding .}"
                                           FontSize="18"
                                           TextColor="Black"
                                           VerticalOptions="Center" />
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Resources>
                        <Style TargetType="ListView">
                            <Setter Property="SeparatorVisibility" Value="None" />
                        </Style>
                    </ListView.Resources>
                </ListView>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="FillAndExpand" Margin="0,10,0,0">
                <Button Text="Selecionar"
                        Clicked="OnSelectButtonClicked"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="15,10"
                        FontSize="16">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="10,10" Radius="10" Opacity="0.5" />
                    </Button.Shadow>
                </Button>

                <Button Text="Cancelar"
                        Clicked="OnCancelButtonClicked"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="15,10"
                        FontSize="16">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="10,10" Radius="10" Opacity="0.5" />
                    </Button.Shadow>
                </Button>
            </HorizontalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>