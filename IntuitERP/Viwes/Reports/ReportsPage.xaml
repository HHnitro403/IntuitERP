<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.Reports.ReportsPage"
             Title="NewPage1">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30,20">
            <Label
                Text="Selecione um Relatório"
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Button x:Name="VendasReportButton" Text="Relatório de Vendas" Clicked="OnGenerateReportClicked" />
            <Button x:Name="ComprasReportButton" Text="Relatório de Compras" Clicked="OnGenerateReportClicked" />
            <Button x:Name="ProdutosReportButton" Text="Relatório de Produtos" Clicked="OnGenerateReportClicked" />
            <Button x:Name="ClientesReportButton" Text="Relatório de Clientes" Clicked="OnGenerateReportClicked" />
            <Button x:Name="EstoqueReportButton" Text="Relatório de Estoque" Clicked="OnGenerateReportClicked" />

            <ActivityIndicator x:Name="activityIndicator"
                               IsRunning="False"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>