<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.CadastrodeUsuario"
             Title="CadastrodeUsuario">
    <!-- Main Grid for the page layout -->
    <Grid RowSpacing="0" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer with Buttons -->
        </Grid.RowDefinitions>

        <!-- Top header -->
        <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#FFE4C4, Dark=#1A1C20}" Padding="10,15">
            <Label Text="Novo Usuário" TextColor="White" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Scrollable Form Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- Dados do Usuário -->
                <Frame BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}" CornerRadius="8" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Dados de Acesso" FontSize="18" FontAttributes="Bold"/>

                        <!-- Nome de Usuário -->
                        <Label Text="Usuário:" FontSize="16"/>
                        <Entry x:Name="UsuarioEntry" Placeholder="Digite o nome de usuário" FontSize="16"/>

                        <!-- Senha -->
                        <Label Text="Senha:" FontSize="16"/>
                        <Entry x:Name="SenhaEntry" Placeholder="Digite a senha" IsPassword="True" FontSize="16"/>

                        <!-- Confirmar Senha (Recommended for better UX) -->
                        <Label Text="Confirmar Senha:" FontSize="16"/>
                        <Entry x:Name="ConfirmarSenhaEntry" Placeholder="Confirme a senha" IsPassword="True" FontSize="16"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Permissões -->
                <Frame BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}" CornerRadius="8" Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Permissões do Usuário" FontSize="18" FontAttributes="Bold" Margin="0,0,0,5"/>

                        <!-- Permissões de Produtos -->
                        <Label Text="Produtos:" FontSize="16" FontAttributes="Bold"/>
                        <Grid ColumnSpacing="10" RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Criar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="0" Grid.Column="1" x:Name="PermissaoProdutosCreateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Ler:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="0" Grid.Column="3" x:Name="PermissaoProdutosReadSwitch" HorizontalOptions="End" IsToggled="False"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Atualizar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="1" Grid.Column="1" x:Name="PermissaoProdutosUpdateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Deletar:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="1" Grid.Column="3" x:Name="PermissaoProdutosDeleteSwitch" HorizontalOptions="End" IsToggled="False"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#DDDDDD, Dark=#444444}" Margin="0,10"/>


                        <!-- Permissões de Vendas -->
                        <Label Text="Vendas:" FontSize="16" FontAttributes="Bold"/>
                        <Grid ColumnSpacing="10" RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Criar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="0" Grid.Column="1" x:Name="PermissaoVendasCreateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Ler:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="0" Grid.Column="3" x:Name="PermissaoVendasReadSwitch" HorizontalOptions="End" IsToggled="False"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Atualizar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="1" Grid.Column="1" x:Name="PermissaoVendasUpdateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Deletar:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="1" Grid.Column="3" x:Name="PermissaoVendasDeleteSwitch" HorizontalOptions="End" IsToggled="False"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#DDDDDD, Dark=#444444}" Margin="0,10"/>

                        <!-- Permissões de Vendedores -->
                        <Label Text="Vendedores:" FontSize="16" FontAttributes="Bold"/>
                        <Grid ColumnSpacing="10" RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Criar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="0" Grid.Column="1" x:Name="PermissaoVendedoresCreateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Ler:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="0" Grid.Column="3" x:Name="PermissaoVendedoresReadSwitch" HorizontalOptions="End" IsToggled="False"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Atualizar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="1" Grid.Column="1" x:Name="PermissaoVendedoresUpdateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Deletar:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="1" Grid.Column="3" x:Name="PermissaoVendedoresDeleteSwitch" HorizontalOptions="End" IsToggled="False"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#DDDDDD, Dark=#444444}" Margin="0,10"/>

                        <!-- Permissões de Fornecedores -->
                        <Label Text="Fornecedores:" FontSize="16" FontAttributes="Bold"/>
                        <Grid ColumnSpacing="10" RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Criar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="0" Grid.Column="1" x:Name="PermissaoFornecedoresCreateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Ler:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="0" Grid.Column="3" x:Name="PermissaoFornecedoresReadSwitch" HorizontalOptions="End" IsToggled="False"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Atualizar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="1" Grid.Column="1" x:Name="PermissaoFornecedoresUpdateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Deletar:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="1" Grid.Column="3" x:Name="PermissaoFornecedoresDeleteSwitch" HorizontalOptions="End" IsToggled="False"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#DDDDDD, Dark=#444444}" Margin="0,10"/>

                        <!-- Permissões de Clientes -->
                        <Label Text="Clientes:" FontSize="16" FontAttributes="Bold"/>
                        <Grid ColumnSpacing="10" RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="Criar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="0" Grid.Column="1" x:Name="PermissaoClientesCreateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Ler:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="0" Grid.Column="3" x:Name="PermissaoClientesReadSwitch" HorizontalOptions="End" IsToggled="False"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Atualizar:" VerticalOptions="Center" FontSize="14"/>
                            <Switch Grid.Row="1" Grid.Column="1" x:Name="PermissaoClientesUpdateSwitch" HorizontalOptions="End" IsToggled="False"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Deletar:" VerticalOptions="Center" FontSize="14" Margin="20,0,0,0"/>
                            <Switch Grid.Row="1" Grid.Column="3" x:Name="PermissaoClientesDeleteSwitch" HorizontalOptions="End" IsToggled="False"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#DDDDDD, Dark=#444444}" Margin="0,10"/>

                        <!-- Permissão de Relatórios -->
                        <Label Text="Relatórios:" FontSize="16" FontAttributes="Bold"/>
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Gerar Relatórios:" VerticalOptions="Center" FontSize="14"/>
                            <Switch x:Name="PermissaoRelatoriosGenerateSwitch" HorizontalOptions="EndAndExpand" IsToggled="False"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer with Action Buttons -->
        <Grid Grid.Row="2" Padding="20" ColumnSpacing="10" BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2C2C2C}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SalvarUsuarioButton" Grid.Column="0" Text="Salvar Usuário" BackgroundColor="ForestGreen" TextColor="White" FontSize="16" CornerRadius="8"/>
            <Button x:Name="CancelarButton" Grid.Column="1" Text="Cancelar" BackgroundColor="DarkRed" TextColor="White" FontSize="16" CornerRadius="8"/>
            <!-- Add Clicked event handlers in C# for functionality -->
        </Grid>

    </Grid>
</ContentPage>