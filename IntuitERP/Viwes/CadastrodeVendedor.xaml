<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.Viwes.CadastrodeVendedor"
             Title="CadastrodeVendedor">
    <!-- Main Grid for the page layout -->
    <Grid RowSpacing="0" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer with Buttons -->
        </Grid.RowDefinitions>

        <!-- Top header -->
        <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#FFE4C4, Dark=#1A1C20}" Padding="10,15">
            <Label Text="Novo Vendedor" TextColor="White" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Scrollable Form Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- Dados do Vendedor -->
                <Frame BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}" CornerRadius="8" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Informações do Vendedor" FontSize="18" FontAttributes="Bold"/>

                        <!-- Nome do Vendedor -->
                        <Label Text="Nome do Vendedor:" FontSize="16"/>
                        <Entry x:Name="NomeVendedorEntry" Placeholder="Digite o nome completo do vendedor" FontSize="16"/>

                        <!-- Total de Vendas (Read-only or for display when editing) -->
                        <Label Text="Total de Vendas:" FontSize="16"/>
                        <Entry x:Name="TotalVendasEntry" Text="0" IsEnabled="False" FontSize="16"/>

                        <!-- Vendas Finalizadas (Read-only or for display when editing) -->
                        <Label Text="Vendas Finalizadas:" FontSize="16"/>
                        <Entry x:Name="VendasFinalizadasEntry" Text="0" IsEnabled="False" FontSize="16"/>

                        <!-- Vendas Canceladas (Read-only or for display when editing) -->
                        <Label Text="Vendas Canceladas:" FontSize="16"/>
                        <Entry x:Name="VendasCanceladasEntry" Text="0" IsEnabled="False" FontSize="16"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer with Action Buttons -->
        <Grid Grid.Row="2" Padding="20" ColumnSpacing="10" BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2C2C2C}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SalvarVendedorButton" Clicked="SalvarVendedorButton_Clicked" Grid.Column="0" Text="Salvar Vendedor" BackgroundColor="ForestGreen" TextColor="White" FontSize="16" CornerRadius="8"/>
            <Button x:Name="CancelarButton" Clicked="CancelarButton_Clicked" Grid.Column="1" Text="Cancelar" BackgroundColor="DarkRed" TextColor="White" FontSize="16" CornerRadius="8"/>
            <!-- Add Clicked event handlers in C# for functionality -->
            <!-- e.g., Clicked="SalvarVendedorButton_Clicked" -->
        </Grid>

    </Grid>
</ContentPage>