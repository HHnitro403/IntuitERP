<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntuitERP.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*"
              Padding="20">

            <!-- Logo/Image -->
            <Image Grid.Row="0" 
                   Source="dotnet_bot.png"
                   HeightRequest="150"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20" />

            <!-- Login Title -->
            <Label Grid.Row="1" 
                   Text="Welcome Back"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30" />

            <!-- Login Form -->
            <VerticalStackLayout Grid.Row="2" 
                                 Spacing="20">

                <!-- Username Input -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Username" FontAttributes="Bold" />
                    <Frame Padding="15,0" HasShadow="False" 
                           x:Name="UserFrame"
                           BorderColor="Gray"
                           CornerRadius="8" HeightRequest="50">
                        <Entry Placeholder="Enter your username"
                               x:Name="UserEntry" 
                               TextChanged="OnUserTextChanged"
                               ReturnType="Next" />
                    </Frame>
                    <Label x:Name="UserErrorLabel" 
                           IsVisible="False"
                           TextColor="Red"
                           FontSize="12" />
                </VerticalStackLayout>

                <!-- Password Input -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Password" FontAttributes="Bold" />
                    <Frame Padding="15,0" HasShadow="False"
                           x:Name="PasswordFrame"
                           BorderColor="Gray"
                           CornerRadius="8" HeightRequest="50">
                        <Entry Placeholder="Enter your password"
                               x:Name="PasswordEntry" 
                               IsPassword="True"
                               TextChanged="OnPasswordTextChanged"
                               ReturnType="Done" />
                    </Frame>
                    <Label x:Name="PasswordErrorLabel" 
                           IsVisible="False"
                           TextColor="Red"
                           FontSize="12" />
                </VerticalStackLayout>

                <!-- Remember Me -->
                <HorizontalStackLayout>
                    <CheckBox Grid.Column="0" 
                              x:Name="RememberMeCheckbox" 
                              VerticalOptions="Center" />
                    <Label Text="Remember Me" 
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Login Button -->
                <Button Text="LOGIN"
                        x:Name="LoginButton"
                        Clicked="OnLoginButtonClicked"
                        IsEnabled="False"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        CornerRadius="25" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
